/* discover页样式 */
page {
  background-color: #fff;
}
.discover {
  width: 100%;
}
.discover .search_input {
  width: 100%;
  height: 80rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  background: #ededed;
  padding: 0 10rpx;
}
.search_input input {
  flex: 1;
  font-size: 32rpx;
  padding: 0 20rpx;
}
.search_input text {
  color: #ccc;
}
.search_input button{
  color: #666;
}
.search_content {
  margin: 0 20rpx;
  font-size: 36rpx;
  padding: 20rpx;
  border-bottom: 1px solid #ededed;
  position: relative;
  box-sizing: border-box;
}
.search_content ::after{
  content: ">>";
  color: #ccc;
  padding-left: 20rpx;
}